<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context="com.airmovil.profuturo.ti.retencion.gerenteFragmento.Encuesta2">
    <!-- TODO: Contenedor general -->
    <LinearLayout style="@style/linearLayoutVertical">
        <LinearLayout style="@style/especioSuperior"></LinearLayout>

        <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/gfe2_spinner_afores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Seleccione la afore"
            android:backgroundTint="@color/colorPrimaryDark"
            app:met_floatingLabel="normal" />-->
        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_afores"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_motivo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_estatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_instituto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_regimen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout style="@style/contenedorSpinner1">
            <Spinner android:id="@+id/gfe2_spinner_documentos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimaryDark"/>
            <TextView style="@style/linea1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <EditText
                android:id="@+id/gfe2_et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/texto_telefono"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/gfe2_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/texto_email"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- TODO: btn Continual -->
        <Button android:id="@+id/gfe2_btn_continuar" style="@style/btnContinuar" />
        <!-- TODO: btn Cancelar -->
        <Button android:id="@+id/gfe2_btn_cancelar" style="@style/btnCancelar" />
    </LinearLayout>

</ScrollView>
