<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_id"
        android:layout_centerHorizontal="true"
        android:text="texto1" />

    <TextView
        android:id="@+id/message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="texto2" />

    <com.airmovil.profuturo.ti.retencion.helper.DrawingView
        android:id="@+id/aff_dv_firma"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="visible">

    </com.airmovil.profuturo.ti.retencion.helper.DrawingView>

    <TextView android:id="@+id/aff_lbl_Latitud" style="@style/tvlatitud"/>
    <TextView android:id="@+id/aff_lbl_Longitud" style="@style/tvLogintud"/>
    <ToggleButton android:id="@+id/aff_btn_actualizar" style="@style/btnActualizar"/>

    <Button android:id="@+id/aff_btn_limpiar" style="@style/btnLimpiar"/>
    <Button android:id="@+id/aff_btn_guardar" style="@style/btnGuardar" />
    <Button android:id="@+id/aff_btn_cancelar" style="@style/btnCancelar" />
</LinearLayout>
