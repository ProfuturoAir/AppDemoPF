<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/afrcl_cv_lista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="#f6f6f6"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="0dp"
    card_view:cardElevation="5dp">
    <LinearLayout style="@style/contenedorLista">
        <!-- TODO: Contenedor del circulo y textView(Una sola letra) -->
        <LinearLayout style="@style/contenedorCirculoLista">
            <!-- TODO: muestra la primera letra del nombre u otro contenido -->
            <TextView android:id="@+id/afrcl_tv_letra" style="@style/letraLista"/>
        </LinearLayout>
        <LinearLayout style="@style/contenedorElementosLista">
            <TextView android:id="@+id/afrcl_tv_nombre_cliente" style="@style/campoLista"/>
            <TextView android:id="@+id/afrcl_tv_cuenta_cliente" style="@style/campoLista"/>
            <LinearLayout style="@style/contenedorDetalleLista">
                <TextView style="@style/conCitaLista"/>
                <TextView
                    android:id="@+id/afrcl_tv_con_cita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>
                <TextView style="@style/noEmitido"/>
                <TextView
                    android:id="@+id/afrcl_tv_no_emitido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>