<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dfrcll_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="#f6f6f6"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="0dp"
    card_view:cardElevation="5dp">
    <LinearLayout style="@style/contenedorLista">
        <!-- TODO: Contenedor del circulo y textView(Una sola letra) -->
        <LinearLayout style="@style/contenedorCirculoLista">
            <!-- TODO: muestra la primera letra del nombre u otro contenido -->
            <TextView android:id="@+id/dfrcll_tv_letra" style="@style/letraLista"/>
        </LinearLayout>
        <LinearLayout style="@style/contenedorElementosLista">
                <TextView android:id="@+id/dfrcll_tv_nombre_cliente" style="@style/campoLista" android:text="Nombre de sucursal"/>
                <TextView android:id="@+id/dfrcll_tv_cuenta_cliente" style="@style/campoLista" android:text="Cuenta"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <!-- TODO: campo 1 -->
                            <TextView android:id="@+id/dfrcll_tv_asesor_cliente" style="@style/textoLista"/>
                            <!-- TODO: campo 2 -->
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content">
                            <TextView android:id="@+id/dfrcll_tv_con_cita_cliente" style="@style/textoGreenLista"/>
                            <TextView android:id="@+id/dfrcll_tv_sin_cita_cliente" style="@style/textoRedLista"/>
                        </LinearLayout>
                            <!-- TODO: campo 2 -->
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content">
                            <TextView android:id="@+id/dfrcll_tv_retenidos_cliente" style="@style/textoGreenLista"/>
                            <TextView android:id="@+id/dfrcll_tv_no_retenidos_cliente" style="@style/textoRedLista"/>
                        </LinearLayout>
                            <!-- TODO: campo 1 -->
                            <TextView android:id="@+id/dfrcll_tv_sucursal_cliente" android:paddingLeft="10dp" style="@style/textoLista"/>
                    </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/dfrcll_btn_detalles"
            android:layout_width="50dp"
            android:layout_marginLeft="-50dp"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/icono_menu_vertical"/>
    </LinearLayout>
</android.support.v7.widget.CardView>