<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ddfrgl_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:background="@color/colorWhite">
        <LinearLayout style="@style/contenedorLista">
            <!-- TODO: Contenedor del circulo y textView(Una sola letra) -->
            <LinearLayout style="@style/contenedorCirculoLista">
                <!-- TODO: muestra la primera letra del nombre u otro contenido -->
                <TextView
                    android:id="@+id/dfrgl_tv_letra"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/estilo_circular"
                    android:gravity="center"
                    android:text="@string/texto_letra"
                    android:textColor="@color/colorWhite"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/dfrgl_tv_id_gerencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/a_imgv_letra"
                        android:text="Id Gerencia"
                        android:textSize="17dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/dfrgl_tv_id_gerencia"
                        android:ellipsize="marquee"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">
                        <!-- TODO: TextView, Con cita -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="Cita:"/>
                        <TextView
                            android:id="@+id/dfrgl_tv_con_cita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_dark"
                            android:text="1234"
                            android:textSize="13dp"/>
                        <!-- TODO: TextView, sin cita -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="|"/>
                        <TextView
                            android:id="@+id/dfrgl_tv_sin_cita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:text=" 321 "
                            android:textSize="13dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text=" Emitidos:"/>
                        <TextView
                            android:id="@+id/dgrgl_tv_emitido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="|"/>
                        <TextView
                            android:id="@+id/dgrgl_tv_no_emitido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="13dp"/>

                        <!-- TODO: textView, Saldo retenido -->
                        <TextView
                            android:id="@+id/dfrgl_tv_saldos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text=" Saldos" />

                        <TextView
                            android:id="@+id/dfrgl_tv_con_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_dark"
                            android:text=" 321 "
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="13dp"/>

                        <TextView
                            android:id="@+id/dfrgl_tv_sin_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_red_dark"
                            android:text=" 321 "
                            android:textSize="13dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dfrgl_tv_porcentaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13dp"
                        android:text="% Retenidos asdasdasdasdasdasdasdsda" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dfrcll_btn_detalles"
                    android:layout_width="50dp"
                    android:layout_marginLeft="-50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icono_menu_vertical"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>