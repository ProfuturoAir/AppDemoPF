<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/login"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/colorPrimaryDark"
android:gravity="center_vertical"
tools:context="com.airmovil.profuturo.ti.retencion.activities.Login">
<ImageView
    android:layout_width="400dp"
    android:layout_height="100dp"
    android:src="@drawable/img_logo_profuturo"
    android:layout_gravity="center_horizontal"
    android:contentDescription="@string/texto_img_descripcion"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginRight="80dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="80dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_numero_empleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@color/colorPrimaryLight"
        android:background="@color/colorPrimaryLight"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/login_et_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:hint="@string/texto_cusp"
            android:padding="10dp"
            android:background="@color/colorPrimaryLight"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_contrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@color/colorPrimaryLight"
        android:background="@color/colorPrimaryLight"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/login_et_contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:hint="@string/texto_contrasenia"
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@color/colorPrimaryLight"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_btn_ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Ingresar"/>

</LinearLayout>

</LinearLayout>

