<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context="com.airmovil.profuturo.ti.retencion.directorFragmento.ReporteGerente">


    <LinearLayout style="@style/linearLayoutVertical" android:background="@android:color/white">
        <TextView style="@style/tituloProceso" android:text="GERENCIAS " />
        <TextView android:id="@+id/dfrg_tv_fecha" style="@style/fecha"/>

        <LinearLayout style="@style/contenedorRetenidosNoRetenidosSaldoAfavorSaldoEnContra">
            <LinearLayout style="@style/contenedorCantidadRetenidosSaldoAFavorColorFondo">
                <TextView style="@style/textoRetenidos" android:text="Entidades"/>
                <TextView style="@style/textoCantidadRetenidoNoRetenido" android:id="@+id/dfrg_tv_retenidos"/>
            </LinearLayout>
            <LinearLayout style="@style/contenedorCantidadRetenidosSaldoAFavorColorFondo" >
                <TextView style="@style/textoNoRetenidos" android:text="No Entidades"/>
                <TextView style="@style/textoCantidadRetenidoNoRetenido" android:id="@+id/dfrg_tv_no_retenidos"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/contenedorRetenidosNoRetenidosSaldoAfavorSaldoEnContra">
            <LinearLayout style="@style/contenedorCantidadRetenidosSaldoRetenido">
                <TextView style="@style/textoCantidad" android:text="Saldo Emitido" />
                <TextView style="@style/textoCantidadSaldoRetenido" android:id="@+id/dfrg_tv_saldo_a_favor" />
            </LinearLayout>
            <LinearLayout style="@style/contenedorCantidadNoRetenidosSaldoEnContra">
                <TextView style="@style/textoCantidad" android:text="Saldo no Emitido"/>
                <TextView android:id="@+id/dfrg_tv_saldo_retenido" style="@style/textoCantidadSaldoNoRetenido" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/contenedorFiltros2">
            <LinearLayout style="@style/contenedorSpinnerLarge">
                <Spinner android:id="@+id/dfrg_spinner_gerencias"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/colorWhite"/>
                <TextView style="@style/linea"/>
            </LinearLayout>
            <LinearLayout style="@style/linearLayoutHorizontal">
                <TextView android:id="@+id/dfrg_tv_fecha_rango1" style="@style/fechaInicial2" />
                <TextView android:id="@+id/dfrg_tv_fecha_rango2" style="@style/fechaFinal2"/>
            </LinearLayout>
            <Button android:id="@+id/dfrg_btn_filtro" style="@style/btnBuscar"/>
        </LinearLayout>

        <LinearLayout style="@style/cabeceraLista">
            <TextView style="@style/tituloLista" android:text="@string/texto_gerencias"/>
            <TextView android:id="@+id/dfrg_tv_registros" style="@style/campoCantidadesMail"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>